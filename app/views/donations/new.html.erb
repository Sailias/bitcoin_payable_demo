<div class="donations-new">
  
  <%= form_for @donation do |f| %>
    <h3>
      Please enter the amount you wish to donate: <br />
      <small>Donations must be > $1 CAD</small>
    </h3>

    <div class="row">
      <div class='col-xs-12 col-md-offset-3 col-md-6'>
        <%= f.text_field :amount, placeholder: '$1.00 CAD', class: 'form-control' %>
        <br />
        <%= f.submit "Donate Now", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
      
  <% end %>
</div>